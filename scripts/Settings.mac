#SETTINGS TO CONTROL SIMULATION

#--------------------------------------------------------------
# GENERAL

#/simulation/verbose 0
#/simulation/seed 0

#--------------------------------------------------------------
# PHYSICS

/physics/gamma/livermore/photoelectric true
/physics/gamma/livermore/comptomscattering true
/physics/gamma/livermore/raylieghscattering true
/physics/gamma/fluorescence true
/physics/gamma/refraction false
/physics/gamma/opticalabsorption false
#/physics/gamma/opticalrayliegh false

#/physics/optical/refraction false
#/physics/optical/absorption false
#/physics/optical/raylieghscattering false
#/physics/optical/meiscattering false

#--------------------------------------------------------------
# DATA

/data/Seed 0
/data/bins 2000
/data/fluorescence/fullfield true
/data/fluorescence/fullmapping false
/data/diffraction/fullmapping false

#--------------------------------------------------------------
# WORLD

/world/size 20 10 2.1 cm		
/world/material G4_Galactic
/world/visualization true	

#--------------------------------------------------------------
# DETECTORS

/detector/absorption/rows 20
/detector/absorption/columns 20
/detector/absorption/halfdimensions 0.001 1.25 1.05 cm
/detector/fluorescence/halfdimensions 2 0.01 1 cm

#--------------------------------------------------------------
# OTHER

/Target/CheckAllOverlaps false
/Target/OffSet/Radius 0.0 mm			
/Target/OffSet/Centre 0.0 0.0 0.0 mm
