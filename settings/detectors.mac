#--------------------------------------------------------------------------------
# Macro file to control the general simulation settings, world size and material, 
# and different detectors size, placement, data to record, etc.

#--------------------------------------------------------------------------------
# General
/simulation/seed 0
/simulation/graphics False	
/world/visualization False

#--------------------------------------------------------------------------------
# World

/world/halfdimensions 2200. 0100. 0100. mm		
/world/material G4_Galactic

#--------------------------------------------------------------------------------
# Detectors

# - Absorption
/detector/absorption/halfdimensions 00.001 10.0112 06.004 mm
/detector/absorption/xpixels 434
/detector/absorption/ypixels 302

# - Fluorescence
/detector/fluorescence/halfdimensions 02.00 00.01 01.00 cm
/detector/fluorescence/fullmapping True
/detector/fluorescence/fullfield   True
/detector/fluorescence/bins        2000
/detector/fluorescence/maxenergy     100. keV

# - Beam
/beam/bins      2000
/beam/maxenergy  175. keV

#--------------------------------------------------------------------------------


