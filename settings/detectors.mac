#--------------------------------------------------------------------------------
# Macro file to control the general simulation settings, world size and material, 
# and different detectors size, placement, data to record, etc.

#--------------------------------------------------------------------------------
# General

/simulation/seed 0
/simulation/graphics false
/world/visualization true	

#--------------------------------------------------------------------------------
# World

/world/size 15 10 2.1 cm		
/world/material G4_Galactic

#--------------------------------------------------------------------------------
# Detectors

# - Absorption
/detector/absorption/halfdimensions 0.001 1.25 1.05 cm
/detector/absorption/rows 25
/detector/absorption/columns 21

# - Fluorescence
/detector/fluorescence/halfdimensions 2 0.01 1 cm
/detector/fluorescence/bins 1000
/detector/fluorescence/maxenergy 60 keV
/detector/fluorescence/fullmapping false
/detector/fluorescence/fullfield true

# - Beam
/beam/bins 2000
/beam/maxenergy 175 keV

#--------------------------------------------------------------------------------
